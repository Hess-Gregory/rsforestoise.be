{% extends "AppBundle::back_end_base.html.twig" %}

{% block section %}

	<div id="back_end_player_payment_add">

		<div class="card">
	        <div class="card-header">Ajouter un Paiement</div>
	        <div class="card-block">

				<form action="{{ path('back_end_player_payment_add', {'playerId': player.id}) }}" method="post" {{ form_enctype(form) }} class="form-horizontal" role="form">
							
				    {{ form_start(form) }}

			    	{{ form_errors(form) }}

			    	{{ form_row(form.amount) }}
			    	{{ form_row(form.type) }}
			    	{{ form_row(form.date) }}
			
				    <div style="clear:both;"></div>

			        <div class="text-center">         
			            <button type="submit" class="btn btn-secondary" style="margin-top:10px;">Ajouter</button>   
			        </div>

			        {{ form_end(form) }}
				</form>
			</div>
		</div>	
	</div>

	<div style="clear:both;"></div>

{% endblock section %}

{% block javascripts %}

	<script type="text/javascript">

		$(function(){
			$('.has-error input:first').focus();
		});

	</script>

{% endblock %}