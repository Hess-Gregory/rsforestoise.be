{% extends "AppBundle::back_end_base.html.twig" %}

{% block section %}
	
	<div id="back_end_tournament_default">

		{% for message in app.session.flashbag.get('info') %}
	    	<p class="alert alert-success text-center"><b>{{ message }}</b></p>
	    {% endfor %}

		<div class="card">
	        <div class="card-header">Tournois</div>
	        <div class="card-block">

				<div class="table-responsive">
					<table class="table table-condensed table-bordered table-striped table-hover" id="tablesorter">
						<thead>
							<tr>
								<th class="order-by-column" title="Inverser l'ordre de cette colonne">Date</th>
								<th colspan="4">
									<a href="{{ path('back_end_tournament_add') }}">
										<div class="btn btn-success btn-sm" title="Ajouter"><i class="fa fa-plus"></i></div>
									</a>
								</th>
							</tr>
						</thead>
						<tbody>
							{% for tournament in tournaments %}
								<tr>
									<td width="100%">{{ tournament.date|date("d/m/Y") }}</td>
									<td>
										<a href="{{ path('back_end_tournament_edit', {'tournamentId': tournament.id}) }}">
											<div class="btn btn-warning btn-sm" title="Modifier"><i class="fa fa-pencil"></i></div>
										</a>
									</td>
									<td>
										<a href="{{ path('back_end_tournament_pool', {'tournamentId': tournament.id}) }}">
											<div class="btn btn-secondary btn-sm" title="Equipes"><i class="fa fa-child"></i></div>
										</a>
									</td>
									<td>
										<a href="{{ path('back_end_tournament_delete', {'tournamentId': tournament.id}) }}" onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer ce tournoi ?')">
											<div class="btn btn-danger btn-sm" title="Supprimer"><i class="fa fa-trash-o"></i></div>
										</a>
									</td>
								</tr>

							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
		
	</div>

    <div style="clear:both;"></div>



{% endblock section %}

{% block javascripts %}

	<script type="text/javascript" src="/vendor/tablesorter/jquery.tablesorter-update.js"></script>
	<script type="text/javascript">

		$(function() {
			$('#tablesorter').tablesorter({
			});
		});

	</script>

{% endblock %}