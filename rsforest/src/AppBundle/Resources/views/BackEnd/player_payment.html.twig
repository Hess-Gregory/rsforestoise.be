{% extends "AppBundle::back_end_base.html.twig" %}

{% block section %}
		<style>
		@media 
only screen and (max-width: 760px),
(min-device-width: 768px) and (max-device-width: 1277px)  {
	td:before { 
position: absolute;
    top: 6px;
    left: 24px;
    width: 45%;
    padding-right: 10px;
    white-space: nowrap;
    text-align: left;
	}	
	/*
	Label the data
	*/
	td:nth-of-type(1):before { content: "Montant"; }
	td:nth-of-type(2):before { content: "Type"; }
	td:nth-of-type(3):before { content: "Date"; }
}
</style>
	<div id="back_end_player_payment">

		{% for message in app.session.flashbag.get('info') %}
	    	<p class="alert alert-success text-center"><b>{{ message }}</b></p>
	    {% endfor %}

		<div class="card">
	        <div class="card-header">Paiements de {{ player.name|capitalize }}</div>
	        <div class="card-block">

				<div class="table-responsive">
					<table class="table table-condensed table-bordered table-striped table-hover" id="tablesorter">
						<thead>
							<tr>
								<th class="order-by-column" title="Inverser l'ordre de cette colonne">Montant</th>
								<th class="order-by-column" title="Inverser l'ordre de cette colonne">Type</th>
								<th class="order-by-column" title="Inverser l'ordre de cette colonne">Date</th>
								<th colspan="5">
									<a href="{{ path('back_end_player_payment_add', {'playerId': player.id}) }}">
										<div class="btn btn-success btn-sm" title="Ajouter"><i class="fa fa-plus"></i></div>
									</a>
								</th>
							</tr>
						</thead>
						<tbody>
							{% for payment in payments %}
							
								<tr>
									<td width="33%">{{ payment.amount }}</td>
									<td width="33%">{{ payment.type }}</td>
									<td width="33%">{{ payment.date|date("d/m/Y") }}</td>
									<td>
										<a href="{{ path('back_end_player_payment_edit', {'playerId': player.id, 'paymentId': payment.id}) }}">
											<div class="btn btn-warning btn-sm" title="Modifier"><i class="fa fa-pencil"></i></div>
										</a>
									</td>
									<td>
										<a href="{{ path('back_end_player_payment_delete', {'playerId': player.id, 'paymentId': payment.id}) }}" onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer ce paiement ?')">
											<div class="btn btn-danger btn-sm" title="Supprimer"><i class="fa fa-trash-o"></i></div>
										</a>
									</td>
								</tr>

							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
		
	</div>

    <div style="clear:both;"></div>



{% endblock section %}

{% block javascripts %}

	<script type="text/javascript" src="/vendor/tablesorter/jquery.tablesorter-update.js"></script>
	<script type="text/javascript">

		$(function() {
			$('#tablesorter').tablesorter({
			});
		});

	</script>

{% endblock %}